# Kchat Environment Configuration Example
# Copy this file to .env and update the values as needed

# Application Configuration
APP_NAME=Kchat
APP_ENV=production
LOG_LEVEL=INFO

# Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# LLM Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
DEFAULT_MODEL=mistral
PRIMARY_MODEL=deepseek-r1:14b
FALLBACK_MODEL=mistral

# Knowledge Pipeline Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=128
MAX_FILE_SIZE_MB=100
QUARANTINE_DIR=quarantine

# Security Configuration
# Add API keys or tokens here if needed
# OPENAI_API_KEY=your_openai_key_here
# HUGGINGFACE_TOKEN=your_hf_token_here

# Performance Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30.0
HEALTH_CHECK_INTERVAL=60

# Storage Configuration
LOGS_DIR=logs
QUOTES_DIR=quotes
BACKEND_DATA_DIR=backend_data
EMBEDDINGS_DIR=embeddings

# Development Configuration (only for dev environment)
DEBUG=false
RELOAD=false

# Docker Configuration
COMPOSE_PROJECT_NAME=kchat
DOCKER_BUILDKIT=1

# Network Configuration
BIND_HOST=0.0.0.0
BIND_PORT=8000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090